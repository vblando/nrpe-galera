DB_USER="user"
state=`echo "show status like 'wsrep_local_state';" | mysql -u $DB_USER | egrep -v 'gcomm|Value' | awk '{print $2}'`

if [ $state -eq 1 ]
then
    echo "WARNING - Joining state"
    exit 1
elif [ $state -eq 2 ]
then
    echo "CRITICAL - Donor/Desynced state"
    exit 2
elif [ $state -eq 3 ]
then
    echo "WARNING - Joined state"
    exit 1
elif [ $state -eq 4 ]
then
    echo "OK - Synced"
    exit 0
else
    echo "CRITICAL - $state"
    exit 2
fi
